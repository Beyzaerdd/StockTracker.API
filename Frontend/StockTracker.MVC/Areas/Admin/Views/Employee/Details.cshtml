@model StockTracker.MVC.Areas.Admin.Models.EmployeeModels.EmployeeModel

@{
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Main Card with shadow, rounded edges, and modern design -->
            <div class="card shadow-lg border-0 rounded-3 mb-4">
                <div class="card-header text-center bg-info text-white">
                    <h4><i class="bi bi-person-circle"></i> Çalışan Detayları <span>👀</span></h4>
                </div>
            </div>

            <!-- Employee Info Cards -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5><i class="bi bi-person-fill"></i> <strong>İsim:</strong> @Model.Name @Model.LastName</h5>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5><i class="bi bi-telephone-fill"></i> <strong>Telefon:</strong> @Model.Phone</h5>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5><i class="bi bi-briefcase-fill"></i> <strong>Pozisyon:</strong> @Model.Position</h5>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5><i class="bi bi-currency-dollar"></i> <strong>Maaş:</strong> @Model.Salary.ToString("C2")</h5>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5><i class="bi bi-calendar-fill"></i> <strong>Başlangıç Tarihi:</strong> @Model.StartDate.ToString("dd MMM yyyy")</h5>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5>
                        <i class="bi bi-calendar-x-fill"></i> <strong>Bitiş Tarihi:</strong>
                        @if (Model.EndDate.HasValue)
                        {
                            @Model.EndDate.Value.ToString("dd MMM yyyy")
                        }
                        else
                        {
                            <span>Henüz belirlenmemiş</span>
                        }
                    </h5>
                </div>
            </div>

            <div class="card-body">
                <div class="text-center">
                    <a href="@Url.Action("Index", "Employee", new { area = "Admin" })" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
