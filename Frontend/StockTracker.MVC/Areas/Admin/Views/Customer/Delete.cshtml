@model StockTracker.MVC.Areas.Admin.Models.CustomerModels.CustomerModel

@{
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Confirmation Card -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-center bg-danger text-white">
                    <h4><i class="bi bi-person-x-fill"></i> Müşteri Silme Onayı</h4>
                </div>
                <div class="card-body">
                    <p class="text-center">Aşağıdaki müşteri bilgilerini silmek istediğinizden emin misiniz?</p>
                    <div class="mb-3">
                        <div><strong>İsim:</strong> @Model.Name @Model.LastName</div>
                        <div><strong>Email:</strong> @Model.Email</div>
                        <div><strong>Telefon:</strong> @Model.Phone</div>
                        <div><strong>Adres:</strong> @Model.Address</div>
                    </div>
                    <div class="text-center">
                        <form method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Evet, Sil
                            </button>
                            <a href="@Url.Action("Index", "Customer", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Hayır, Geri Dön
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
