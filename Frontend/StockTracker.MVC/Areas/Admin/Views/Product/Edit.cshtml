<!-- UpdateEmployee.cshtml -->
@model StockTracker.MVC.Areas.Admin.Models.ProductModels.UpdateProductModel

@{
    Layout = "_Layout"; // Sayfa düzenini belirtmek için
}
@if (TempData["SuccessMessage"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["SuccessMessage"]');
    </script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData["ErrorMessage"]');
    </script>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Card with shadow, rounded edges, and modern design -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-center btn-blue text-white">
                    <h4><i class="bi bi-person-edit"></i> Ürün Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <!-- ID (Hidden) -->
                        <div class="mb-4">
                            <input asp-for="Id" type="hidden" />
                        </div>

                        <!-- Name Field -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fs-5">Ad</label>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg shadow-none", placeholder = "Ürün adı girin", @autocomplete = "off" })
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

               


                        <!-- Salary Field -->
                        <div class="mb-4">
                            <label asp-for="MonthlyPrice" class="form-label fs-5">Aylık Kiralama ücreti</label>
                            @Html.TextBoxFor(m => m.MonthlyPrice, new { @class = "form-control form-control-lg shadow-none", placeholder = "Aylık kiralama ücretini girin", @autocomplete = "off" })
                            <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
                        </div>

                        <!-- Salary Field -->
                        <div class="mb-4">
                            <label asp-for="StockQuantity" class="form-label fs-5">Stok Adeti</label>
                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control form-control-lg shadow-none", placeholder = "Stok adeti  girin", @autocomplete = "off" })
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <!-- Name Field -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fs-5">Açıklama</label>
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-lg shadow-none", placeholder = "Ürün Açıklaması girin", @autocomplete = "off" })
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-lg w-48">Güncelle</button>
                            <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-secondary btn-lg w-48">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Customize the form controls */
    .form-control-lg {
        height: 50px;
        font-size: 1.1rem;
        padding-left: 15px;
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    .card-header {
        background-color: wheat;
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
        padding: 20px;
    }

    .card-body {
        padding: 3rem;
        background-color: #f8f9fa;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }

        .card-body .form-label {
            font-weight: 500;
        }

    .shadow-none {
        box-shadow: none !important;
    }

    .bi {
        font-size: 2.5rem;
    }

    /* Button width for a balanced layout */
    .w-48 {
        width: 48%;
    }
</style>
